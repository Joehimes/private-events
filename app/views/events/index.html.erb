<h1>All Events</h1>

<h3>Past Events</h3>
<ul>
    <% @past.each do |event| %>
        <li><%= link_to event.description, event_path(event) %></li>
    <% end %>
</ul>

<h3>Upcoming Events</h3>
<ul>
    <% @upcoming.each do |event| %>
        <li><%= link_to event.description, event_path(event) %></li>
    <% end %>
</ul>
